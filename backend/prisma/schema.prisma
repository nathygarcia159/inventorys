generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Cart {
  cartId     String   @id @default(cuid())
  productId  String
  product    Products @relation(fields: [productId], references: [productId])
  quantity   Int      // Cantidad del producto
  status     CartStatus @default(ACTIVE) // Estado del carrito
  createdAt  DateTime @default(now()) // Fecha de creaci√≥n
}

model Products{
  productId String @id @default(cuid())
  name String 
  descripcion String
  price Float
  color String
  rating Float?
  stockQuantity Int
  cart Cart[]
}

enum CartStatus {
  ACTIVE
  CHECKED_OUT
}
